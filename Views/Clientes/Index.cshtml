@model IEnumerable<FichaClientes.Models.Cliente>

<h2>Lista de Clientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Cliente</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>
                    <a asp-action="Edtit" asp-route-id="@cliente.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>